<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/rectangle_solide_white_bg"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/tv_title_wifidialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textSize="17sp"
        android:text="请输入WIFI密码"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#e4e4e4" />
    <Spinner
        android:id="@+id/spinner_wifidialog"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <EditText
        android:id="@+id/tv_content_wifidialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/line_horizontal_smart"
            android:text="目前暂不支持5G频段的WIFI，请使用2-4G频段的WIFI"
            />
        <TextView
            android:id="@+id/tv_left_cancel_btn_wifidialog"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/text_title"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            android:text="取消"
            />

        <TextView
            android:id="@+id/tv_right_confirm_btn_wifidialog"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_below="@id/text_title"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            android:text="确定"
            />

    </RelativeLayout>

</LinearLayout>