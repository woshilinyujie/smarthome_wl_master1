<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user_picture"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent" />

        <!-- 用户头像 -->
        <ImageView
            android:id="@+id/user_picture"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:padding="3dp"
            android:src="@mipmap/default_user_picture" />


        <!-- 用户信息 -->
        <LinearLayout
            android:id="@+id/already_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/user_picture"
            android:orientation="vertical">

            <!-- 昵称 -->
            <TextView
                android:id="@+id/user_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <!-- 手机号 -->
            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:text="186****8564"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@mipmap/more_arrow" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/gatewaylist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="42dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:background="@mipmap/current_gateway" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="当前网关"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_gateway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>


    <!--规则 -->
    <LinearLayout
        android:id="@+id/main_rules"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="42dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu_rule" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="触发联动"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>


    <!--计划-->
    <LinearLayout
        android:id="@+id/main_plans"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="42dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu_plan" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="定时计划"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <!--设备管理-->
    <LinearLayout
        android:id="@+id/main_equipment_management"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="42dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu_device" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="设备管理"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <!--区域管理-->
    <LinearLayout
        android:id="@+id/main_area_management"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="42dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu_module" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="区域管理"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!--场景管理-->
    <LinearLayout
        android:id="@+id/main_scene_management"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="42dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu_scenario" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="场景管理"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 推送设置 -->
    <LinearLayout
        android:id="@+id/main_push"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="42dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/push_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="推送设置"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <!-- 关于信息 -->
    <LinearLayout
        android:id="@+id/main_about_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="42dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="关于及帮助"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
