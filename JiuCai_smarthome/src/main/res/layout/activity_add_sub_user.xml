<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_sub_user"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/header_rl"
        layout="@layout/title_bar" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp">
        <ImageView
            android:src="@mipmap/xinghao"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <ImageView
            android:src="@mipmap/register_login_pass"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/phonenum_edit_add_sub_user"
            android:maxLines="1"
            android:hint="账号(手机号)"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.1"
        android:background="@android:color/darker_gray"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp">
        <ImageView
            android:src="@mipmap/xinghao"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <ImageView
            android:src="@mipmap/register_login_pass"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/password_edit_add_sub_user"
            android:maxLines="1"
            android:hint="密码"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.1"
        android:background="@android:color/darker_gray"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp">
        <ImageView
            android:src="@mipmap/xinghao"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <ImageView
            android:src="@mipmap/register_login_pass"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/confirm_password_edit_add_sub_user"
            android:maxLines="1"
            android:hint="确认密码"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/register_login_pass"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.1"
        android:background="@android:color/darker_gray"
    />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp">
        <ImageView
            android:visibility="invisible"
            android:src="@mipmap/xinghao"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <ImageView
            android:src="@mipmap/alairs"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/aliars_edit_add_sub_user"
            android:maxLines="1"
            android:hint="昵称"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.1"
        android:background="@android:color/darker_gray"
    />
    <LinearLayout
        android:id="@+id/linear_yanzheng_add_sub_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
    >
        <ImageView
            android:src="@mipmap/xinghao"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <ImageView
            android:src="@mipmap/register_yanzheng"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/yanzhengma_edit_add_sub_user"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="验证码"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="number"
            android:layout_alignParentStart="true"/>

        <com.fbee.smarthome_wl.widget.SendCodeButton
            android:id="@+id/sendyanzhengma_add_sub_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="发送验证码"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:background="@null"
        />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/window_bg"
        android:layout_height="40dp">
        <TextView
            android:text="授权网关(房子)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listview_edit_add_sub_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>
