<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ys_report_item_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="@mipmap/ys_yuan" />

        <TextView
            android:id="@+id/ys_report_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="今天"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>


    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">


        <ImageView
            android:id="@+id/ys_report_item_iv"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_72"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@mipmap/home_video_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_toRightOf="@id/ys_report_item_iv"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ys_report_item_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/ys_report_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="00：00：00"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
        
        <ImageView
            android:layout_marginRight="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/right_lab"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_18" />

    </RelativeLayout>
</LinearLayout>