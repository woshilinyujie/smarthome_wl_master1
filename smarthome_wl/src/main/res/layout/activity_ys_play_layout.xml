<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/ys_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="#000000">


        <SurfaceView
            android:id="@+id/ys_sv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220">

        </SurfaceView>


        <LinearLayout
            android:id="@+id/quanpin_ll"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">


            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/quanpin_lock"
                    android:background="@mipmap/quanpin_lock"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/quanpin_jinyin"
                    android:background="@mipmap/quanpin_jinyin"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/quanpin_guaduan"
                    android:background="@mipmap/quanoin_guanduan"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/quanpin_connection"
                    android:background="@mipmap/quanpin_connect"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ys_loading"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/ys_play"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerInParent="true"
            android:background="@mipmap/ys_play"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/ys_time_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:background="#20000000">


            <TextView
                android:id="@+id/ys_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <com.videogo.widget.CheckTextButton
                android:id="@+id/ys_screen"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/ys_scal" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ys_connection"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@mipmap/ys_connection" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="接通"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ys_guaduan"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/ys_guaduan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:text="挂断"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ys_jinyin"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/ys_jinyin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:text="静音"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ys_kaisuo"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/ys_kaisuo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:text="开锁"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>