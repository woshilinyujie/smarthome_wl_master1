<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/rectangle_solide_white_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="标题"
        android:textColor="@color/color_gray_text"
        android:textSize="17sp" />

    <View
        android:id="@+id/parting_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#e4e4e4" />

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:text="内容文字内容文字内容文字内容文字内容文字内容文字内容文字内容文字"
        android:textColor="@color/dimgrey"
        android:textSize="14sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_left_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_empty_white_bg"
            android:gravity="center_horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="8dp"
            android:text="按钮"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_right_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle_solide_btn_bg"
            android:gravity="center_horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="8dp"
            android:text="按钮"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>
</LinearLayout>