<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:padding="5dp">


    <ImageView
        android:id="@+id/iv_icon_scenario"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>


    <TextView
        android:id="@+id/tv_text_scenario"
        android:layout_below="@id/iv_icon_scenario"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="8"
        android:gravity="center"
        android:text="cj"/>
    <TextView
        android:id="@+id/btn_lock_record_hint"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:layout_alignTop="@id/iv_icon_scenario"
        android:layout_alignRight="@id/iv_icon_scenario"
        android:background="@drawable/bg_oval"
        android:textColor="@color/body_text"
        android:textSize="9sp"
        android:visibility="gone"
         />
    </RelativeLayout>

