<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_weight="3"
android:paddingTop="5dp">

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_open_lock"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:src="@mipmap/binding_lock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="远程开锁" />

    <TextView
        android:id="@+id/tv_online_state"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="离线"
        android:textSize="17sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/bg_yuan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线状态" />

</LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_account_num"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:src="@mipmap/eques_visitor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="门锁账号" />

    <TextView
        android:id="@+id/tv_power_state"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="50%"
        android:textSize="17sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/bg_yuan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电量状态" />

</LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_lock_record"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@mipmap/snap_shot"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="门锁记录" />

    <TextView
        android:id="@+id/tv_device_info"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="设备\n详情"
        android:textColor="@color/colorAccent"
        android:background="@drawable/bg_yuan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="门锁详情" />

</LinearLayout>
</LinearLayout>