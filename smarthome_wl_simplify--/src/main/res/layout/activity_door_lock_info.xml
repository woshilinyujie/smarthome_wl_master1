<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_door_lock_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/linear_updateDevName"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备名称"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doorlock_Name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/arrow_right"
                />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_device_model"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备型号"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doorlock_model_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_power"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电量"
                    android:textSize="16sp"
                    android:id="@+id/textView8"/>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/power_25"
                    android:layout_marginRight="25dp"
                    android:id="@+id/doorlock_power_info"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_alignParentEnd="true"


                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/doorlock_isonline_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_isonline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线状态"
                    android:textSize="16sp"
                    android:layout_alignBaseline="@+id/doorlock_isonline_info"
                    android:layout_alignBottom="@+id/doorlock_isonline_info"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_uuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UDID"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doorlock_duuid_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_ieee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IEEE"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doorlock_ieee_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:textSize="16sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模块软件版本"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doorlock_model_soft_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginRight="25dp"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_device_code"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="设备串码"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doorlock_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_scence_panel"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="16dp">


                <TextView
                    android:id="@+id/tv_scence_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/arrow_right"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
